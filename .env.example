# IBIT Trading Bot - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# E*TRADE API (Required for live trading)
# =============================================================================
ETRADE_CONSUMER_KEY=your_consumer_key
ETRADE_CONSUMER_SECRET=your_consumer_secret
ETRADE_ACCOUNT_ID=your_account_id
ETRADE_SANDBOX=false

# =============================================================================
# REAL-TIME DATA SOURCES
# =============================================================================
# Alpaca - FREE real-time data (recommended)
# Sign up at: https://alpaca.markets
ALPACA_API_KEY=your_alpaca_key
ALPACA_SECRET_KEY=your_alpaca_secret

# Finnhub - FREE real-time (optional backup)
# Sign up at: https://finnhub.io
FINNHUB_API_KEY=

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# paper = simulated trades (no real money)
# live = real trades (actual money!)
TRADING_MODE=paper

# Maximum percentage of cash per trade (1-100)
MAX_POSITION_PCT=75

# Maximum dollar amount per trade (optional)
# MAX_POSITION_USD=1000

# =============================================================================
# TELEGRAM BOT (Required for mobile notifications)
# =============================================================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token

# Your personal chat ID (send /start to your bot to get this)
TELEGRAM_CHAT_ID=your_chat_id

# Trade approval settings
# required = must approve each trade via Telegram
# notify_only = send notification but auto-execute
# auto_execute = no notification, just execute
APPROVAL_MODE=required
APPROVAL_TIMEOUT_MINUTES=10

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your.email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_TO=your.email@gmail.com

# Desktop notifications (only works locally, not on Railway)
DESKTOP_ENABLED=false
